@model IEnumerable<HumaneSociety.Models.Animal>
@{
    ViewBag.Title = "Index";
}

<h2>View</h2>

@Html.ActionLink("Create New", "Create")

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnimalType)
        </th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimalType)
            </td>
            <td>
                @Html.ActionLink("Modify", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Further Information", "Details", new { id = item.ID}) |
                @Html.ActionLink("Adopted", "Delete", new { id = item.ID}) |
            </td>
        </tr>
    }
</table>